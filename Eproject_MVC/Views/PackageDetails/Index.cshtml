@model IEnumerable<Database.PackageDetail>

@{
    ViewBag.Title = "Index";
}

<h2>PackageDetail</h2>
<button type="button" onclick="location.href= '@Url.Action("Login","Login")'">logout</button>
<button type="button" onclick="location.href= '@Url.Action("Index","Users")'">User</button>
<button type="button" onclick="location.href= '@Url.Action("Index","Admins")'">Admin</button>
<button type="button" onclick="location.href= '@Url.Action("Index","DnDs")'">Distributors and Dealers</button>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DnD.DnDname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Packagename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DnD.DnDname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Packagename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrip)
        </td>
        <td>
            
            <img src="@Url.Content(item.Img)" style="width:80px; height:80px" alt="@Html.DisplayFor(modelItem => item.Img)" />  
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PackageId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PackageId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PackageId })
        </td>
    </tr>
}

</table>
